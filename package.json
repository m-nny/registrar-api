{
    "name": "registrar-api",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "nodemon",
        "db:run": "docker run -it -p 27017:27017 mongo",
        "build": "tsc",
        "start": "node dist/server.js",
        "lint": "eslint .",
        "lint:write": "eslint . --color --format codeframe --ext .ts,.tsx --fix"
    },
    "lint-staged": {
        "*.{ts,js}": [
            "npm run lint:write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "envalid": "^6.0.0",
        "express": "^4.17.1",
        "lodash": "^4.17.15",
        "mongoose": "^5.7.11"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.1",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.2",
        "@types/lodash": "^4.14.149",
        "@types/mongoose": "^5.5.32",
        "@typescript-eslint/eslint-plugin": "^2.7.0",
        "@typescript-eslint/parser": "^2.7.0",
        "husky": "^1.1.2",
        "nodemon": "^1.19.4",
        "ts-node": "^8.5.2",
        "eslint": "^6.6.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.6.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-import": "^2.18.2",
        "prettier": "^1.3.1",
        "typescript": "^3.7.2",
        "lint-staged": "^7.3.0"
    }
}
